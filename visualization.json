{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "building_inventory.json"},
  "transform": [{
    "window": [{"op": "rank", "as": "rank"}],
    "sort": [{"field": "SquareFootage", "order": "descending"}],
    "groupby": ["Year"]
  }, {
    "filter": "datum.rank <= 5"
  }],
  "mark": "bar",
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "axis": {"labelAngle": 0}},
    "y": {"field": "SquareFootage", "type": "quantitative"},
    "color": {"field": "Department", "type": "nominal"}
  }
}
